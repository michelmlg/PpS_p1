@model P1_pps.Models.Funcionario;

@{
    ViewData["Title"] = "Criar";
}

<div class="container">
    <form method="post" asp-action="AddFuncionario" class="p-3">
        <div class="mb-3">
            <label for="txtNomeCompleto" class="form-label">Nome Completo:</label>
            <input type="text" class="form-control" name="nomeCompleto" required>
        </div>
        <div class="mb-3">
            <label for="txtCpf" class="form-label">CPF:</label>
            <input type="text" class="form-control cpf" name="cpf" required>
            @Html.ValidationMessage("cpf", "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            <label for="txtDataNascimento" class="form-label date">Data de Nascimento:</label>
            <input type="text" id="txtDataNascimento" class="form-control" name="dataNascimento" required>
            @Html.ValidationMessage("dataNascimento", "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            <label for="txtEmail" class="form-label">Email:</label>
            <input type="text" class="form-control" name="email" required>
            @Html.ValidationMessage("email", "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            <label for="txtCargo" class="form-label">Cargo:</label>
            <input type="text" class="form-control" name="cargo" required>
        </div>
        <div class="mb-3">
            <label for="txtDataDeAdmissao" class="form-label date">Data de Admissão:</label>
            <input type="text" id="txtDataDeAdmissao" class="form-control" name="dataAdmissao" required>
        </div>
        <div class="mb-3">
            <label for="txtNomeDoChefeImediato" class="form-label">Nome do Chefe:</label>
            <input type="text" class="form-control" name="nomeChefe" required>
        </div>
        <button type="submit" class="btn btn-primary">Registrar</button>
    </form>

@section Scripts {
        <script>
            $(document).ready(function () {
                console.log("JQuery rodando!");

                $('#txtDataNascimento').mask('00/00/0000');
                $('#txtDataDeAdmissao').mask('00/00/0000');

                $('.cpf').mask('000.000.000-00', { reverse: true });
            });
        </script>
}
