@model P1_pps.Models.Funcionario;
@{
    ViewData["Title"] = "Editar";
}

<div class="container">
    <form method="post" asp-action="EditFuncionario" class="p-3">
        <div class="mt-3">
            <label class="form-label">Chave Numérica</label>
            <input type="text" class="form-control" name="chaveNumerica" asp-for="ChaveNumerica" readonly>
        </div>
        <div class="mb-3">
            <label for="txtNomeCompleto" class="form-label">Nome Completo:</label>
            <input type="text" class="form-control" name="nomeCompleto" asp-for="NomeCompleto" required>
        </div>
        <div class="mb-3">
            <label for="txtCpf" class="form-label">CPF:</label>
            <input type="text" class="form-control cpf" name="cpf" asp-for="Cpf" required>
            @Html.ValidationMessage("cpf", "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            <label for="txtDataNascimento" class="form-label date">Data de Nascimento:</label>
            <input type="text" id="txtDataNascimento" class="form-control" name="dataNascimento" value="@Model.DataNascimento.ToString("dd/MM/yyyy")" required>
            @Html.ValidationMessage("dataNascimento", "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            <label for="txtEmail" class="form-label">Email:</label>
            <input type="text" class="form-control email" name="email" asp-for="Email" required>
            @Html.ValidationMessage("email", "", new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            <label for="txtCargo" class="form-label">Cargo:</label>
            <input type="text" class="form-control" name="cargo" asp-for="Cargo" required>
        </div>
        <div class="mb-3">
            <label for="txtDataDeAdmissao" class="form-label date">Data de Admissão:</label>
            <input type="text" id="txtDataDeAdmissao" class="form-control" name="dataAdmissao" value="@Model.DataAdmissao.ToString("dd/MM/yyyy")" required>
        </div>
        <div class="mb-3">
            <label for="txtNomeDoChefeImediato" class="form-label">Nome do Chefe:</label>
            <input type="text" class="form-control" name="nomeChefe" asp-for="NomeChefe" required>
        </div>
        <button type="submit" class="btn btn-primary">Alterar</button>
    </form>

@section Scripts{
    <script>
        $(document).ready(function(){
                $('#txtDataNascimento').mask('00/00/0000');
                $('#txtDataDeAdmissao').mask('00/00/0000');

                $('.cpf').mask('000.000.000-00', { reverse: true });



        });
    </script>
}