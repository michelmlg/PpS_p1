@model List<P1_pps.Models.Funcionario>;
@{
    ViewData["Title"] = "Form Funcionários";
}

<div class="container">
    <form method="post" asp-action="AddFuncionario" class="p-3">
        <div class="mb-3">
            <label for="txtNomeCompleto" class="form-label">Nome Completo:</label>
            <input type="text" class="form-control" name="nomeCompleto" required>
        </div>
        <div class="mb-3">
            <label for="txtCpf" class="form-label">CPF:</label>
            <input type="text" class="form-control" name="cpf" required>
        </div>
        <div class="mb-3">
            <label for="txtDataNascimento" class="form-label">Data de Nascimento:</label>
            <input type="date" class="form-control" name="dataNascimento" required>
        </div>
        <div class="mb-3">
            <label for="txtEmail" class="form-label">Email:</label>
            <input type="email" class="form-control" name="email" required>
        </div>
        <div class="mb-3">
            <label for="txtCargo" class="form-label">Cargo:</label>
            <input type="text" class="form-control" name="cargo" required>
        </div>
        <div class="mb-3">
            <label for="txtDataDeAdmissao" class="form-label">Data de Admissão:</label>
            <input type="date" class="form-control" name="dataAdmissao" required>
        </div>
        <div class="mb-3">
            <label for="txtNomeDoChefeImediato" class="form-label">Nome do Chefe:</label>
            <input type="text" class="form-control" name="nomeChefe" required>
        </div>
        <button type="submit" class="btn btn-primary">Registrar</button>
    </form>


   
    </div>
</div>

