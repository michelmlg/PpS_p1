<div class="container">

    @if (Model != null)
    {
        <form method="post" asp-action="@(Model.ChaveNumerica != null ? "UpdateFuncionario" : "AddFuncionario")" class="p-3">
            <input type="hidden" name="ChaveNumerica" value="@Model.ChaveNumerica" />

            <div class="mb-3">
                <label for="txtNomeCompleto" class="form-label">Nome Completo:</label>
                <input type="text" class="form-control" name="nomeCompleto" value="@Model.NomeCompleto" required>
            </div>
            <div class="mb-3">
                <label for="txtCpf" class="form-label">CPF:</label>
                <input type="text" class="form-control" name="cpf" value="@Model.Cpf" required>
            </div>
            <div class="mb-3">
                <label for="txtDataNascimento" class="form-label">Data de Nascimento:</label>
                <input type="text" class="form-control" name="dataNascimento" value="@Model.DataNascimento)" required>
            </div>
            <div class="mb-3">
                <label for="txtEmail" class="form-label">Email:</label>
                <input type="email" class="form-control" name="email" value="@Model.Email" required>
            </div>
            <div class="mb-3">
                <label for="txtCargo" class="form-label">Cargo:</label>
                <input type="text" class="form-control" name="cargo" value="@Model.Cargo" required>
            </div>
            <div class="mb-3">
                <label for="txtDataDeAdmissao" class="form-label">Data de Admissão:</label>
                <input type="text" class="form-control" name="dataAdmissao" value="@Model.DataAdmissao" required>
            </div>
            <div class="mb-3">
                <label for="txtNomeDoChefeImediato" class="form-label">Nome do Chefe:</label>
                <input type="text" class="form-control" name="nomeChefe" value="@Model.NomeChefe" required>
            </div>

            <button type="submit" class="btn btn-primary">@(Model.ChaveNumerica != null ? "Atualizar" : "Registrar")</button>
        </form> 
    }
    else
    {
        <p>Erro: Nenhum funcionário encontrado para edição.</p>
    }
</div>
<script>
    $('#txtDataNascimento').mask("99/99/9999", { placeholder: 'DD/MM/YYYY' });
    $('#txtDataDeAdmissao').mask("99/99/9999", { placeholder: 'DD/MM/YYYY' });

</script>

